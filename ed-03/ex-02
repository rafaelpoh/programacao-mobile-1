fun main(){
    var cc1 = conta(ncliente, saldo, num, ag)
    var cc2 = conta(ncliente, saldo, num, ag)
    conta1.imprimeextrato()
    conta2.imprimeextrato()
    conta1.depositar(100.0)
    conta2.depositar(400.0)
    conta2.retirar(50.0)
    conta1.transferir(70.0, conta2)
    conta1.imprimeextrato()
    conta2.imprimeextrato()
}

class conta (val ncliente: String, var saldo: Double = null, var num: Int, val ag: Int){
        
    fun depositar(dep: Double){
        dep = readLine()!!.toDouble()
        saldo += dep
    }

    fun retirar(saque: Double){
        op = readLine()!!.toDouble()
        if(saldo < saque){
            println("Sem saldo")
        } else{
            saldo -= saque
        }
    }

    fun transferir(transf: Double, num.saldo: Conta){
        transf = readLine()!!.toDouble()
        num = readLine()!!.toInt()
        if (saldo < transf){
            println("Saldo insuficiente")
        } else{
            saldo -= transf
            num.saldo += transf
        }
    }

    fun imprimeextrato(){
        println("Extrato:")
        println("Cliente: $ncliente")
        println("Agência: $ag")
        println("Número da conta: $num")
        println("Saldo: R$$saldo")
    }
}
